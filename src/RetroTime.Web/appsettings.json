{
    "Server": {
        "BaseUrl": "https://emscrumtools.azurewebsites.net/retrotime"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "File": {
            "Path": null,
            "Append": "True",
            "FileSizeLimitBytes": 1048576,
            "MaxRollingFiles": 24
        }
    },
    "AllowedHosts": "*",
    "Security": {
        "LobbyCreationPassphrase": null,
        "EnableProxyMode": false
    },
    "Database": {
        "DatabaseProvider": "Sqlite",
        "ConnectionString": "Data Source=retro-time.db;",
        "Server": "",
        "Database": "retro-time",
        "IntegratedSecurity": true,
        "UserId": null,
        "Password": null,
        "ConnectionTimeout": null,
        "Encrypt": null
    },
    "Mail": {
        "Host": "localhost",
        "EnableSSL": false,
        "Port": 25,
        "UserName": "",
        "Password": "",
        "FromAddress": "app@example.com",
        "FromDisplayName": "RetroTime [DEV]",
        "TestMailTarget": "void@example.com"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/.log",
                    "rollingInterval": "Day",
                    "flushToDiskInterval": 30,
                    "shared": true
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ]
    }
}

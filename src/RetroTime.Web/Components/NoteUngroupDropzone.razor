<div class="box dropzone"
     ondragover="event.preventDefault();"
     @ondrop="@HandleDrop"
     @ondragenter="@HandleDragEnter"
     @ondragleave="@HandleDragLeave">
    <p>
        Drop here to ungroup
    </p>
</div>

@code {
    #nullable disable

    protected string DropClass { get; private set; }

    [CascadingParameter]
    public NoteLane Container { get; set; }

    protected void HandleDragEnter()
    {
        // Ignore drag to self
        if (null == Container.Payload?.GroupId) return;

        // TODO: check lane ID "no-drop"
        DropClass = "can-drop";
    }

    protected void HandleDragLeave()
    {
        DropClass = "";
    }

    protected async Task HandleDrop()
    {
        DropClass = "";

        if (null == Container.Payload?.GroupId) return;

        await Container.UpdateGroupAsync(null);
    }
}

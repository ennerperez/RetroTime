@using RetroTime.Application.Common.Models


<span class="vote-indicator" data-test-element-id="@TestElementId" style="color: #@Color.HexString">
    <span class="@CssClass fa-star fa-1x"></span>
</span>


@code {
#nullable disable

    [Parameter]
    public ColorModel Color { get; set; }

    [Parameter]
    public bool IsCast { get; set; }

    private string CssClass => IsCast ? "fas" : "far";
    private string TestElementId => IsCast ? "cast-vote" : "uncast-vote";
}
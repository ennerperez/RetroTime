@using RetroTime.Application.Retrospectives.Queries.GetRetrospectiveStatus
<div class="columns">
    @foreach (RetrospectiveLane lane in this.RetrospectiveStatus.Lanes)
    {
        int order = this.RetrospectiveStatus.Lanes.IndexOf(lane) + 1;

        <div class="column" data-test-element-id="note-lane" data-id="@lane.Id" @key="lane.Id">
            <NoteLane Lane="@lane" Order="@order" />
        </div>
    }
</div>

@code {
    #nullable disable

    [CascadingParameter]
    public RetrospectiveStatus RetrospectiveStatus { get; set; }
}
